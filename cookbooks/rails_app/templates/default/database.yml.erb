<%= @env %>:
  adapter: mysql
  host: <%= @host %>
  port: <%= @port %>
  database: <%= @database %>
  username: <%= @username %>
  password: <%= @password %>
  encoding: utf8
  reconnect: true

<% @extra_dbs.each do |db| %>
<%= db[:env] %>:
  adapter: mysql
  host: <%= db[:host] %>
  port: <%= db[:port] %>
  database: <%= db[:database] %>
  username: <%= db[:username] %>
  password: <%= db[:password] %>
  encoding: utf8
  reconnect: true
<%end%>
