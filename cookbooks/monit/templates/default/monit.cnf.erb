RANDFILE = ./openssl.rnd

[ req ]
default_bits = 1024
encrypt_key = yes
distinguished_name = req_dn
x509_extensions = cert_type

[ req_dn ]
countryName = CA
countryName_default = CA

stateOrProvinceName             = British Columbia
stateOrProvinceName_default     = British Columbia

localityName                    = Vancouver
localityName_default            = Vancouver

organizationName                = Example Company
organizationName_default        = Example

organizationalUnitName          = IT
organizationalUnitName_default  = Services

commonName                      = <%=@fqdn%>
commonName_default              = <%=@fqdn%>

emailAddress                    = monit@example.com
emailAddress_default            = mmonit@tildeslash.com

[ cert_type ]
nsCertType = server
